def s: script"1/0"
def f: fiber( s )
cont( f, {} )

assert( state( f ) = 'failed', "1" )
assert( bcmp( errval( f ), '=', "Division by zero" ), "2" )

def c: closure( { "a", "b" }, "a + b" )
assert( c( 4, 5 ) = 9, "3" )

def c: closure( { "a", "b", "c..." }, "a + b + c@0 + c@1 + c@2" )
assert( c( 1, 2, 3, 4, 5 ) = 15, "4" )
